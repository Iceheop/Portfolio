---
import Layout from '../layouts/Layout.astro';
import Main from '../layouts/Main.astro';
import Nav from '../components/Nav.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
---

<Layout>
	  <Main>
			<Nav />
            <Breadcrumb />
			<section>
				<header class="d-flex align-items-center text-secondary mb-3">
					<i class="bi bi-layers-fill fs-5 me-2"></i> 
					<h2 class="fs-5 fw-medium m-0">Proyectos</h2>
				</header>
				<div class="d-flex align-items-center gap-2">
					<span class="badge py-2 px-3 text-secondary border border-opacity-25 border-secondary bg-secondary bg-opacity-25 rounded-pill">
						Design
					</span>
					<span class="badge py-2 px-3 text-secondary border border-opacity-25 border-secondary rounded-pill">
						Development
					</span>
					<span class="badge py-2 px-3 text-secondary border border-opacity-25 border-secondary rounded-pill">
						Design and Development
					</span>
				</div>
				<section class="mt-3 pt-3 row gx-2 gy-2">
					<div class="col-12">
						<article class="ratio ratio-16x9 rounded-4 overflow-hidden">
							<img src="./01.jpg" alt="..." class="img-fluid object-fit-cover" />
						</article>
					</div>
					<div class="col-6">
						<article class="ratio ratio-16x9 rounded-4 overflow-hidden">
							<img src="./02.jpg" alt="..." class="img-fluid object-fit-cover" />
						</article>
					</div>
					<div class="col-6">
						<article class="ratio ratio-16x9 rounded-4 overflow-hidden">
							<img src="./01.jpg" alt="..." class="img-fluid object-fit-cover" />
						</article>
					</div>
				</section>
			</section>
			<br><br><br><br>
	  </Main>
</Layout>

<style>
	.ratio-16x9 img {
		transition: transform 0.5s ease-in-out;
	}  
	.ratio-16x9:hover img {
		transform: scale(1.1);
	}
</style>